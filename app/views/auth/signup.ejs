<% include ../partial/header %>
<% include ../partial/nav %>

<header id="page-top">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-7 web-info">
                <img class="img-responsive" src="/img/logo.png" alt="">
                <div class="intro-text">
                    <span class="name">欢迎访问DataX网站</span>
                    <hr class="star-light">
                    <p class="skills">技术与生活,可视化,数据分析,Go,JavaScript,Python...</p>
                </div>
            </div>
            <div class="col-lg-5 col-md-5 col-sm-12">
                <div class="login-body">
                  <article class="container-login center-block">
                  <section>
                    <ul id="top-bar" class="nav nav-tabs nav-justified">
                      <li ><a href="/login">登入</a></li>
                      <li class="active"><a href="/signup">新用户注册</a></li>
                    </ul>
                    <div class="tab-content tabs-login col-lg-12 col-md-12 col-sm-12 cols-xs-12">
                      <div id="login-access" class="tab-pane fade active in">
                        <h2>
                          <i class="glyphicon glyphicon-user"></i> 用户注册
                          <span id="error_msg"></span>
                             <% if (message.length > 0) { %>
                                  <span class="flash_msg"><%= message %></span>
                              <% } %>
                        </h2>						
                        <form method="post" accept-charset="utf-8" autocomplete="off" role="form" onsubmit = "return signupValidation();" class="form-horizontal">
                          <div class="form-group ">
                            <label for="login" class="sr-only">邮箱账号</label>
                              <input type="email" class="form-control" name="email" id="email" 
                                placeholder="注册邮箱" tabindex="1" value="" required/>
                          </div>
                          <div class="form-group ">
                            <label for="login" class="sr-only">用户名</label>
                              <input type="text" class="form-control" name="username" id="username" 
                                placeholder="用户名" tabindex="1" value="" required/>
                          </div>
                          <div class="form-group ">
                            <label for="password" class="sr-only">密码</label>
                              <input type="password" class="form-control" name="password" id="password"
                                placeholder="注册密码" value="" tabindex="2" required/>
                          </div>
                          <div class="form-group ">
                            <label for="password" class="sr-only">确认密码</label>
                              <input type="password" class="form-control" name="password2" id="password2"
                                placeholder="密码确认" value="" tabindex="2" required/>
                          </div>
                          <br/>
                          <div class="form-group ">				
                              <button type="submit" id="signup-btn" tabindex="5" class="btn btn-lg btn-primary">注册用户</button>
                          </div>
                        </form>			
                      </div>
                    </div>
                  </section>
                </article>
              </div>
            </div>
        </div>
    </div>
</header>

<% include ../partial/footer %>